<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.com.randomapps.android.weightlosscalculator.fragments.AnorexicUsSystem">


    <!-- First column -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/anorexic_us_age_text"
            android:text="Age"
            android:textSize="20sp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="40dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/anorexic_us_age_input"
            android:inputType="number"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="20dp"
            android:ems="5"/>

    </LinearLayout>


    <!-- Second column -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:textSize="20sp"
            android:id="@+id/anorexic_us_gender_text"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="30dp"/>

        <RadioGroup
            android:id="@+id/radioUSSex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioUSMale"
                android:text="Male"
                android:checked="true"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="25dp"
                android:onClick="onUSRadioButtonClicked"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioUSFemale"
                android:text="Female"
                android:checked="false"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="25dp"
                android:onClick="onUSRadioButtonClicked"/>

        </RadioGroup>

    </LinearLayout>


    <!-- Third column -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/anorexic_us_height_text"
            android:text="Height"
            android:textSize="20sp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="25dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/anorexic_us_height_feet"
            android:ems="3"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="25dp"
            android:inputType="number" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Feet"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="10dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/anorexic_us_height_inch"
            android:ems="3"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:inputType="number"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inch"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="32dp"/>

    </LinearLayout>


    <!-- Fourth column -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weight"
            android:textSize="20sp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="25dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/anorexic_us_weight"
            android:ems="5"
            android:inputType="numberDecimal"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="25dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pounds"
            android:layout_marginTop="33dp"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/anorexic_us_button"
        android:text="Result"
        android:textSize="20sp"
        android:layout_marginTop="50dp"
        android:layout_gravity="center|top"
        android:onClick="onUSResultButtonClick"/>

</LinearLayout>