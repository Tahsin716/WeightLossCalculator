<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.com.randomapps.android.weightlosscalculator.fragments.BodyFatUsSystem">

    <!-- First column -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:textSize="20sp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"/>

        <RadioGroup
            android:id="@+id/radioUSSex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioUSMale"
                android:text="Male"
                android:checked="true"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="30dp"
                android:onClick="onUSRadioButtonClicked"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioUSFemale"
                android:text="Female"
                android:checked="false"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="30dp"
                android:onClick="onUSRadioButtonClicked"/>

        </RadioGroup>

    </LinearLayout>


    <!-- Second column -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Height"
            android:textSize="20sp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/body_fat_us_height_feet"
            android:ems="3"
            android:inputType="numberDecimal"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="25dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Feet"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="7dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/body_fat_us_height_inch"
            android:ems="3"
            android:inputType="numberDecimal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inch"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="7dp"/>

    </LinearLayout>


    <!-- Third column -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Neck"
            android:textSize="20sp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/body_fat_us_neck_feet"
            android:ems="3"
            android:inputType="numberDecimal"
            android:layout_marginLeft="42dp"
            android:layout_marginTop="25dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Feet"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="7dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/body_fat_us_neck_inch"
            android:ems="3"
            android:inputType="numberDecimal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inch"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="7dp"/>

    </LinearLayout>


    <!-- Fourth column -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Waist"
            android:textSize="20sp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/body_fat_us_waist_feet"
            android:ems="3"
            android:inputType="numberDecimal"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="25dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Feet"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="7dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/body_fat_us_waist_inch"
            android:ems="3"
            android:inputType="numberDecimal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inch"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="7dp"/>

    </LinearLayout>


    <!-- Fifth column -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hip"
            android:textSize="20sp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/body_fat_us_hip_feet"
            android:ems="3"
            android:inputType="numberDecimal"
            android:layout_marginLeft="54dp"
            android:layout_marginTop="25dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Feet"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="7dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/body_fat_us_hip_inch"
            android:ems="3"
            android:inputType="numberDecimal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inch"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="7dp"/>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/body_fat_us_button"
        android:text="Result"
        android:textSize="20sp"
        android:layout_marginTop="38dp"
        android:layout_gravity="center_horizontal"
        android:onClick="onUsResultButtonClicked"/>

</LinearLayout>