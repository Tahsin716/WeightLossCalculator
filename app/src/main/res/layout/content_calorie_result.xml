<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="app.com.randomapps.android.weightlosscalculator.results.CalorieResult"
    tools:showIn="@layout/activity_calorie_result">

    <!-- First row -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/calorie_result_text_0"
        android:textSize="12sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/calorie_result_0"
        android:textSize="12sp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/calorie_result_text_0"
        android:textColor="#00b200" />

    <!-- Second row -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/calorie_result_text_1"
        android:textSize="12sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/calorie_result_text_0"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/calorie_result_1"
        android:layout_marginTop="20dp"
        android:textSize="12sp"
        android:layout_toRightOf="@id/calorie_result_text_1"
        android:layout_below="@id/calorie_result_0"
        android:textColor="#00b200"/>

    <!-- Third row -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/calorie_result_text_2"
        android:textSize="12sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/calorie_result_text_1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/calorie_result_2"
        android:layout_marginTop="20dp"
        android:textSize="12sp"
        android:layout_toRightOf="@id/calorie_result_text_2"
        android:layout_below="@id/calorie_result_1"
        android:textColor="#00b200"/>

    <!-- Fourth row-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/calorie_result_text_3"
        android:textSize="12sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/calorie_result_text_2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/calorie_result_3"
        android:layout_marginTop="20dp"
        android:textSize="12sp"
        android:layout_toRightOf="@id/calorie_result_text_3"
        android:layout_below="@id/calorie_result_2"
        android:textColor="#00b200"/>

    <!-- Fifth row -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/calorie_result_text_4"
        android:textSize="12sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/calorie_result_text_3"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/calorie_result_4"
        android:layout_marginTop="20dp"
        android:textSize="12sp"
        android:layout_toRightOf="@id/calorie_result_text_4"
        android:layout_below="@id/calorie_result_3"
        android:textColor="#00b200"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/calorie_result_4"
        android:layout_marginTop="150dp"
       android:layout_marginLeft="130dp"
        android:text="OK"
        android:textSize="15sp"
        android:onClick="closeActivity"/>

</RelativeLayout>
